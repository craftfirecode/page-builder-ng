{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "url": {
      "type": "string",
      "required": true
    },
    "zone": {
      "type": "dynamiczone",
      "components": [
        "cms.content",
        "cms.image",
        "cms.button",
        "cms.space",
        "cms.post-list",
        "cms.content-image"
      ],
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "settings": {
      "type": "component",
      "repeatable": false,
      "component": "meta.meta",
      "required": true
    },
    "tag": {
      "type": "component",
      "repeatable": false,
      "component": "items.post-tag",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    }
  }
}
